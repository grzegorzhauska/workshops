%p#notice= notice
%p#error= flash[:error]

%p
  %b Title:
  = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%p
  %b Category
  = product.category.name

%p
  %b Owner
  = link_to product.user.decorate.name, user_path(product.user)

%h3 Reviews
%ul.products
  - reviews.each do |review|
    %li= "Rating: #{review.rating}, Author: #{review.user.decorate.name}, Review: #{review.content}"
- if current_user.present?

  %h4 New Review
  = render 'reviews/form'



- if current_user == product.user
  = link_to 'Edit', edit_category_product_path(category.id, product.id)
  \|
= link_to 'Back', category_path(category), class: 'btn btn-primary'
